{
  "imports": {
    "npm/": "https://unpkg.com/"
  },
  "tasks": {
    "dev": "deno run --allow-net --allow-read --allow-write --allow-env  --watch src/server.ts",
    "build": "deno bundle src/server.ts dist/server.js",
    "test::unit": "deno test --allow-net --allow-read --allow-write --allow-env --watch __tests__/unit/"
  },
  "fmt": {
    "options": {
      "singleQuote": true,
      "indentWidth": 2,
      "proseWrap": "always"
    }
  }
}